pipeline {
    agent any

    parameters {
        string(name: 'MY_PARAM', defaultValue: 'HelloFromJenkins', description: 'Parameter to pass to script')
    }

    stages {
        stage('Run Script with Param') {
            steps {
                script {
                    // Call the shell script and pass the parameter
                    sh "./circle_area.sh ${params.MY_PARAM}"
                }
            }
        }
    }
}
